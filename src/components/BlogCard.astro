---
export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  image?: string;
  tags?: string[];
}

const base = import.meta.env.BASE_URL;
const { title, description, pubDate, slug, image, tags } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
  {image && (
    <a href={`${base}blog/${slug}/`}>
      <img
        src={image}
        alt={title}
        class="w-full h-48 object-cover"
        loading="lazy"
      />
    </a>
  )}
  <div class="p-6">
    {tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-3">
        {tags.map((tag) => (
          <span class="text-xs font-medium px-2 py-1 bg-primary-100 text-primary-700 rounded-full">
            {tag}
          </span>
        ))}
      </div>
    )}
    <h3 class="text-xl font-bold text-gray-900 mb-2">
      <a href={`${base}blog/${slug}/`} class="hover:text-primary-600 transition-colors">
        {title}
      </a>
    </h3>
    <p class="text-gray-600 text-sm mb-4 line-clamp-3">{description}</p>
    <div class="flex items-center justify-between">
      <time datetime={pubDate.toISOString()} class="text-sm text-gray-500">
        {formattedDate}
      </time>
      <a
        href={`${base}blog/${slug}/`}
        class="text-primary-600 hover:text-primary-700 text-sm font-medium"
      >
        Read more â†’
      </a>
    </div>
  </div>
</article>
