---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getCollection } from 'astro:content';

// Get both blog and training posts
const blogPosts = await getCollection('blog');
const trainingPosts = await getCollection('training');

// Combine both collections and add source type
const allPosts = [
  ...blogPosts.map(post => ({ ...post, source: 'blog' })),
  ...trainingPosts.map(post => ({ ...post, source: 'training' }))
];

// Sort by publication date (newest first)
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);

// Process posts to handle co-located images
const processedPosts = sortedPosts.map(post => {
  let imageUrl = post.data.image;
  if (typeof post.data.image === 'object' && post.data.image?.src) {
    imageUrl = post.data.image.src;
  }
  return {
    ...post,
    processedImage: imageUrl
  };
});
---

<BaseLayout
  title="Blog - Chiron"
  description="Read the latest blog posts and training guides from Chiron about fitness, performance, and athletic development."
>
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Blog</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Insights, tips, stories, and comprehensive training guides to help you on your athletic journey.
        </p>
      </div>

      {processedPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {processedPosts.map((post) => {
            // Generate correct URL path based on source
            const urlPath = post.source === 'blog' ? `blog/${post.slug}` : `training/${post.slug}`;
            return (
              <BlogCard
                title={post.data.title}
                description={post.data.description}
                pubDate={post.data.pubDate}
                slug={urlPath}
                image={post.processedImage}
                tags={post.data.tags}
              />
            );
          })}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-600 text-lg">No blog posts yet. Check back soon!</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
