---
import LandingLayout from '../layouts/LandingLayout.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import BlogCard from '../components/BlogCard.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;
const blogPosts = await getCollection('blog');
const recentPosts = blogPosts
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 3);
---

<LandingLayout
  title="Chiron - Your Training Companion"
  description="Chiron helps athletes and fitness enthusiasts achieve their training goals with expert guidance and personalized programs."
>
  <!-- Hero Section -->
  <section slot="hero" class="bg-gradient-to-r from-primary-600 to-primary-800 text-white py-20 md:py-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        Train Smarter, <br class="hidden md:block" />Achieve More
      </h1>
      <p class="text-xl md:text-2xl text-primary-100 mb-8 max-w-3xl mx-auto">
        Discover expert training advice, science-backed methods, and personalized programs to help you reach your athletic potential.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={`${base}training/`}
          class="px-8 py-3 bg-white text-primary-600 font-semibold rounded-lg hover:bg-primary-50 transition-colors"
        >
          Start Training
        </a>
        <a
          href={`${base}blog/`}
          class="px-8 py-3 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-primary-600 transition-colors"
        >
          Read the Blog
        </a>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section slot="features" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Why Choose Chiron?
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Named after the wisest centaur in Greek mythology, Chiron brings ancient wisdom to modern training.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Expert Guidance</h3>
          <p class="text-gray-600">
            Science-backed training methods and expert advice to optimize your performance.
          </p>
        </div>
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Training Programs</h3>
          <p class="text-gray-600">
            Structured programs for runners, cyclists, and multi-sport athletes of all levels.
          </p>
        </div>
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">In-Depth Articles</h3>
          <p class="text-gray-600">
            Regular blog posts and training guides to keep you informed and motivated.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Blog Posts -->
  {recentPosts.length > 0 && (
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Latest from the Blog
          </h2>
          <p class="text-lg text-gray-600">
            Stay up to date with our latest training tips and insights.
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {recentPosts.map((post) => (
            <BlogCard
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              slug={post.slug}
              image={post.data.image}
              tags={post.data.tags}
            />
          ))}
        </div>
        <div class="text-center mt-8">
          <a
            href={`${base}blog/`}
            class="inline-block px-6 py-3 text-primary-600 font-medium hover:text-primary-700"
          >
            View all posts â†’
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section slot="cta" class="py-20 bg-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <NewsletterSignup
        title="Join the Chiron Community"
        description="Subscribe to our newsletter for weekly training tips, exclusive content, and updates."
      />
    </div>
  </section>
</LandingLayout>
